extends layout

block title
	title Server maintenance - Flight Finder

block content
	main(role='main')
		.container.py-5.py-lg-10
			.row.justify-content-center.align-items-center
				.col-lg-5.text-center.text-lg-left.order-2.order-lg-1
					h1.text-dark.font-weight-bold.text-xl-nowrap.text-lh-1 Website is under maintenance...
					p.mb-4.text-muted Sorry for the inconvenience. Please come back later.
					a.btn.btn-primary.px-4(href='/') Back to Home
				.col-lg-7.text-center.order-1.order-lg-2.mb-4.mb-lg-0
					img.img-fluid.w-md-90.w-lg-100(src='../images/svg/undraw_warning.svg', alt='Maintenance')
