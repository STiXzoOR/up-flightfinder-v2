mixin headerContent
	.header-wrapper.header-shadow-on-hide.py-3.py-md-0
		.container-fluid
			nav.navbar.navbar-expand-md.py-1.px-0
				a.navbar-brand.mr-auto(href='/')
					i.ff.ff-logo.ff-xl.ff-fw.mr-1.ml-n1
					| Flight Finder
				button.navbar-toggler.navbar-toggler-hamburger(
					type='button',
					data-toggle='collapse',
					data-target='#headerNavbar',
					aria-controls='headerNavbar',
					aria-expanded='false'
				)
					span.navbar-toggler-hamburger-icon
				#headerNavbar.navbar-collapse.collapse.pt-4.pt-md-0
					ul.navbar-nav.navbar-separate-md.ml-auto
						li.nav-item
							a.nav-link(href='/booking/manage-booking')
								i.d-none.d-md-inline-block.fas.fa-edit.fa-fw.mr-2
								| Manage booking
						if user && user.isAuthenticated
							li.nav-item.dropdown.dropdown-user
								a.nav-link.dropdown-toggle.dropdown-user-toggle(
									role='button',
									data-toggle='dropdown',
									data-display='static',
									aria-haspopup='true',
									aria-expanded='false'
								)
									.flex-vertical-center
										| Hi, #{user.firstName}
										i.d-none.d-md-inline-block.fas.fa-user-circle.font-size-md-30.ml-md-2
								ul.dropdown-menu.dropdown-menu-md-right
									li
										a.dropdown-item(href='/user/profile') Profile
									li
										a.dropdown-item(href='/user/profile#bookings') Bookings history
									li
										a.dropdown-item(href='/user/profile#settings') Change password
									.dropdown-divider
									li
										a.dropdown-item(href='/user/sign-out') Sign out
						else
							li.nav-item
								a.nav-link(href='/user/sign-up')
									i.d-none.d-md-inline-block.fas.fa-user-plus.fa-fw.mr-2
									| Sign up
							li.nav-item
								a.nav-link(href='/user/sign-in')
									i.d-none.d-md-inline-block.fas.fa-sign-in-alt.fa-fw.mr-2
									| Sign in
