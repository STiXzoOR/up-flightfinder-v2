mixin showAlert
	if error || success || flash.error || flash.success
		- var isError = error || flash.error
		.alert.py-4.mb-3(class=isError ? "alert-danger" : "alert-success", role='alert')
			.flex-vertical-center
				i.fas.fa-lg.mr-2(class=isError ? "fa-exclamation-circle" : "fa-check-circle")
				span #{isError ? error || flash.error : succss || flash.success}
