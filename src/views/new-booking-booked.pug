extends layout
include _mixins/preloader

block title
	title Booked - Flight Finder

block preloader
	+preLoader

block content
	main.bg-gray(role='main')
		.container.py-5.py-lg-10
			.row.align-items-center.justify-content-center
				.col-lg-10.col-xl-9
					.card.shadow-soft.px-5.pb-4.pt-6
						.card-header.pb-6.pt-0.px-0
							.flex-vertical-center
								i.far.fa-thumbs-up.fa-3x.text-primary
								.ml-3
									h3.font-size-18.font-weight-bold.text-dark.text-lh-1.mb-2 Thank You. Your booking is confirmed now.
									p.text-lh-1.mb-0 A confirmation email has been sent to your provided email address.
						.card-body.py-4.px-0
							h5.font-size-19.font-weight-bold.text-dark.mb-2 Booking Summary
							ul.font-size-16
								li.flex-center-between.py-2
									span.font-weight-medium.text-nowrap.mr-2.mr-sm-0 Booking reference
									span.text-secondary.text-right.text-truncate #{booking.bookingID}
								li.flex-center-between.py-2
									span.font-weight-medium.text-nowrap.mr-2.mr-sm-0 First name
									span.text-secondary.text-right.text-truncate #{booking.contactFirstName}
								li.flex-center-between.py-2
									span.font-weight-medium.text-nowrap.mr-2.mr-sm-0 Last name
									span.text-secondary.text-right.text-truncate #{booking.contactLastName}
								li.flex-center-between.py-2
									span.font-weight-medium.text-nowrap.mr-2.mr-sm-0 E-mail
									span.text-secondary.text-right.text-truncate #{booking.contactEmail}
								li.flex-center-between.py-2
									span.font-weight-medium.text-nowrap.mr-2.mr-sm-0 Mobile
									span.text-secondary.text-right.text-truncate #{booking.contactMobile}
								li.flex-center-between.py-2
									span.font-weight-medium.text-nowrap.mr-2.mr-sm-0 Flight trip
									span.text-secondary.text-right.text-truncate #{booking.fromCity} to #{booking.toCity}
								li.flex-center-between.py-2
									span.font-weight-medium.text-nowrap.mr-2.mr-sm-0 Flight type
									span.text-secondary.text-right.text-truncate #{booking.flightType}
								li.flex-center-between.py-2
									span.font-weight-medium.text-nowrap.mr-2.mr-sm-0 Date
									span.text-secondary.text-right.text-truncate #{new Date(booking.departDate).toLocaleDateString('en-gb', {weekday: 'short', month: 'short', day: 'numeric'})}
								li.flex-center-between.py-2
									span.font-weight-medium.text-nowrap.mr-2.mr-sm-0 No. passengers
									span.text-secondary.text-right.text-truncate #{booking.quantity}
								li.flex-center-between.py-2
									span.font-weight-medium.text-nowrap.mr-2.mr-sm-0 Total price
									span.text-secondary.text-right.text-truncate &euro;#{booking.totalPrice}
						.card-footer.pt-4.pb-0.px-0
							h5.font-size-19.font-weight-bold.text-dark.mb-2 Booking details
							p Follow the link below to view a detailed overview of your booking.
							a.text-underline.text-primary(
								href=`/booking/manage-booking/bookingID=${booking.bookingID}&lastName=${booking.contactLastName}`
							) View booking details
