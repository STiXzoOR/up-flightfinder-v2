extends layout

block title
	title Internal server error - Flight Finder

block content
	main(role='main')
		.container.py-5.py-lg-10
			.row.justify-content-center.align-items-center
				.col-md-5.text-center.text-md-left.order-2.order-md-1
					h1.text-dark.font-weight-bold.text-xl-nowrap.text-lh-1 Something went wrong
					p.text-muted.mb-4 Your request can&apos;t be processed right now. Try again later
					a.btn.btn-primary.px-4(href='/') Back to Home
				.col-md-7.text-center.order-1.order-md-2.mb-4.mb-md-0
					img.img-fluid.w-xl-90(src='../images/svg/undraw_server_down.svg', alt='Internal Server Error')
